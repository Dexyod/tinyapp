<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-danger">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <!-- <a class="nav-item nav-link" href="/urls/new">Create New URL</a> -->
      </div>
    </div>
    <% if(!user){ %>
    <form class="form-inline" action="/login" method="GET">
      <button type="submit" class="btn btn-outline-dark">New Url</button>
    </form>
    <form
      class="form-inline"
      method="GET"
      action="/register"
      style="padding: 10px;"
    >
      <button type="submit" class="btn btn-outline-dark">
        Register
      </button>
    </form>
    <form class="form-inline" method="GET" action="/login">
      <button type="submit" class="btn btn-outline-dark">Login</button>
    </form>
    <% } else { %>
    <form class="form-inline" action="/urls/new" method="GET">
      <button type="submit" class="btn btn-outline-dark">New Url</button>
    </form>
    <div style="margin: 20px;" class="nav-item">
      Logged In As <%= user.email %>!
    </div>
    <form class="form-inline" method="POST" action="/logout">
      <button type="submit" class="btn btn-outline-dark">Log Out</button>
    </form>
    <% } %>
  </nav>
</header>
